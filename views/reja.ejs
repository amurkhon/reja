<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Document</title>

        <link 
        href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" 
        rel="stylesheet" 
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" 
        crossorigin="anonymous"
        >
    </head>
    <body style="background-color: blueviolet;">
        <div class="container">
            <h1 class="display-4 text-center py-1">REJA VA MAQSADLAR</h1>
            <form id="create-form" action="/create-item" method="POST">
                <div class="d-flex align-items-center">
                    <input id="create-field"
                            name="reja" 
                            type="text"
                            autofocus
                            autocomplete="off"
                            class="form-control mr-3"
                            style="flex: 1;"
                    />
                    <button class="btn btn-primary mx-2 rounded">
                        Yangi reja qo'shish
                    </button>
                </div>
            </form>
            <ul id="item-list" class="list-group mt-4">
                <% items.map(function(item) { %>
                    <li class="list-group-item list-info d-flex align-items-center justify-content-between">
                        <span class="item-text"><%=item.reja%></span>
                        <div>
                            <button data-id="<%=item._id%>" class="edit-me btn btn-secondary btn-sm mr-1">
                                Ozgartirish
                            </button>
                            <button data-id="<%=item._id%>" class="delete-me btn btn-danger btn-sm">
                                Ochirish
                            </button>
                        </div>
                    </li>
                <% }) %>
              </ul>
            <button id="delete-all" class="btn btn-danger my-4 rounded">Hamma rejalarni o'chirish</button>
        </div>
        <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
        <script src="/browser.js"></script>
    </body>
</html>